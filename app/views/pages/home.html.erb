
<canvas id="drawing"></canvas>  

<div id="drawingwrapper">

  <form id="drawing">
    <input id="artwork" placeholder="what is your drawing of?"></input>
  
    <button id="savecanvas" value="submit">save</button>
  </form>


<div id="toolbar">

  <div id="size">
    <div id="decrad" class="radcontrol">-</div>
    <div id="incrad" class="radcontrol">+</div>
    Size <span id="radval">10</span>
  </div>
  
  <div id="shape">
    <div id="round" class="shapecontrol">
      <div class="roundbrush">
      </div>
    </div>

    <div id="square" class="shapecontrol">
      <div class="squarebrush">
      </div>
    </div>

  </div>

  <div id="clear">
    <div class="clearcanvas">x</div>
  </div>

  <div id="colors">
  </div>

</div> <!--toolbar-->


<div> <!--drawingwrapper-->


</div> <!--for the footer-->
</div>

